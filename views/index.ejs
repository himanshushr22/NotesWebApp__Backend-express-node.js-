<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 ">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-sm outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Note Title" name="title">
                <textarea class="block w-full rounded-md outline-none mt-2 px-5 py-2 bg-zinc-800 resize-none" placeholder="write your task" name="details"></textarea>
                <input class="mt-2 cursor-pointer bg-blue-600 px-5 py-2 rounded-md" type="submit" value="create task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
           <% if(files.length > 0){ %>
                <% files.forEach((val)=>{ %>
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h2 class="text-white text-3xl tracking-tighter"><%= val %></h2>
                        <a href="/file/<%= val %>" class="text-blue-500 block mt-2">Read more...</a>
                    </div>
               <% }) %>
           <% } else { %>
            <h3 class="text-zinc-600">No tasks yet...</h3>
            <% } %>
        </div>
    </div>
</body>
</html>